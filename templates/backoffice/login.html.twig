        asset('assetB/')
      }}vendor/jquery-easing/jquery.easing.min.js"></script>

    <!-- Custom scripts for all pages-->
    <script src="{{ asset('assetB/') }}js/sb-admin-2.min.js"></script>
  </body>
</html>
