{% extends 'baseB.html.twig' %} {% block title %} Article-Add | Logone {%
endblock %} {% block stylesheets %}
<link
  href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css"
  rel="stylesheet"
/>

{% endblock %} {% block content %}

<!-- Page Wrapper -->
<div id="wrapper">
  <!-- Sidebar -->
  {{ include("include/backoffice/sidebar.html.twig") }}
  <!-- End of Sidebar -->

  <!-- Content Wrapper -->
  <div id="content-wrapper" class="d-flex flex-column">
    <!-- Main Content -->
    <div id="content">
      <!-- Topbar -->
      {{ include("include/backoffice/navbar.html.twig") }}
      <!-- End of Topbar -->

      <!-- Begin Page Content -->
      <div class="container-fluid">
        <div class="card o-hidden border-0 shadow-lg my-5 offset-2 col-lg-8">
          <div class="card-body p-0">
            <!-- Nested Row within Card Body -->
            <div class="row">
              <div class="col-lg-12">
                <div class="p-5">
                  <div class="text-center">
                    <h1 class="h4 text-gray-900 mb-4">Ajouter un article !</h1>
                  </div>
                  {% form_theme form 'bootstrap_4_layout.html.twig' %}
                  {{ form_start(form) }}
                  <div class="user">
                    <div class="form-group">
                      {{
                        form_row(form.title, {
                          label: false,
                          attr: {
                            class: "form-control",
                            placeholder: "Titre"
                          }
                        })
                      }}
                    </div>
                    <div class="form-group">
                      {{
                        form_row(form.author, {
                          label: false,
                          attr: {
                            class: "form-control ",
                            placeholder: "Auteur"
                          }
                        })
                      }}
                    </div>
                    <div class="form-group">
                      {{
                        form_row(form.categoryArticle, {
                          label: false,
                          attr: {
                            class: "form-control",
                          }
                        })
                      }}
                    </div>
                    <div class="form-group">
                      {{
                        form_row(form.categoryService, {
                          label: false,
                          attr: {
                            class: "form-control",
                          }
                        })
                      }}
                    </div>
                    <div class="form-group">
                      {{
                        form_row(form.content, {
                          label: false,
                          attr: {
                            class: "form-control",
                            placeholder: "Description"
                          }
                        })
                      }}
                    </div>
                    <div class="form-group">
                      {{
                        form_row(form.imageFile, {
                          attr: {
                            class: "form-control",
                            placeholder: "upload image"
                          }
                        })
                      }}
                    </div>
                    <button
                      type="submit"
                      href="login.html"
                      class="btn btn-primary btn-user btn-block"
                    >
                      Enregister
                    </button>
                  </div>
                  <hr />
                  {{ form_end(form) }}
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <!-- /.container-fluid -->
    </div>
    <!-- End of Main Content -->

    <!-- Footer -->
    {{ include("include/backoffice/footer.html.twig") }}
    <!-- End of Footer -->
  </div>
  <!-- End of Content Wrapper -->
</div>
<!-- End of Page Wrapper -->

<!-- Scroll to Top Button-->
<a class="scroll-to-top rounded" href="#page-top">
  <i class="fas fa-angle-up"></i>
</a>

<script>
  jQuery(document).ready(function () {
    $("#article_categoryService").select2();
  });
  $(".custom-file input").change(function (e) {
    if (e.target.files.length) {
      $(this).next(".custom-file-label").html(e.target.files[0].name);
    }
  });
</script>
{% endblock %}
