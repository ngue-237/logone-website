{% extends 'baseB.html.twig' %} {% block title %} Articles | Logone {% endblock
%} {% block content %}

<!-- Page Wrapper -->
<div id="wrapper">
  <!-- Sidebar -->
  {{ include("include/backoffice/sidebar.html.twig") }}
  <!-- End of Sidebar -->

  <!-- Content Wrapper -->
  <div id="content-wrapper" class="d-flex flex-column">
    <!-- Main Content -->
    <div id="content">
      <!-- Topbar -->
      {{ include("include/backoffice/navbar.html.twig") }}
      <!-- End of Topbar -->

      <!-- Begin Page Content -->
      <div class="container-fluid">
        <div class="d-sm-flex align-items-center justify-content-between mb-4">
          <h1 class="h3 mb-0 text-gray-800">Gestion des articles</h1>
          <a
            href="{{ path('article_add') }}"
            class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm"
          >
            <i class="fas fa-plus"></i>
            Ajouter un article</a
          >
        </div>

        <div class="card shadow mb-4">
          <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">
              Listes des articles
            </h6>
          </div>
          <div class="card-body">
            <div class="table-responsive">
              <table
                class="table table-bordered"
                id="dataTable"
                width="100%"
                cellspacing="0"
              >
                <thead>
                  <tr>
                    <th>Titre</th>
                    <th>Cathégorie</th>
                    <th>Publié</th>
                    <th>Posté</th>
                    <th>Options</th>
                  </tr>
                </thead>
                <tfoot>
                  <tr>
                    <th>Titre</th>
                    <th>Cathégorie</th>
                    <th>Publié</th>
                    <th>Posté</th>
                    <th>Options</th>
                  </tr>
                </tfoot>
                <tbody class="text-center">
                  {% set i= 0 %} {% for article in articles %} {% set i= i+1 %}
                  <tr>
                    <td>
                      {{ article.title }}
                    </td>
                    <td>
                      {{ article.categoryArticle }}
                    </td>
                    <td>
                      {%if article.isPublished == 0 %}
                      <i class="far fa-times-circle" style="color: red"></i>
                      {%else%}
                      <i
                        class="far fa-check-circle"
                        style="color: rgb(7, 160, 7)"
                      ></i>
                      {%endif%}
                    </td>
                    <td>
                      {% if article.isPublished == 1 %}
                      <button
                        type="submit"
                        style="background: none; border: none; outline: none"
                      >
                        <div class="custom-control custom-checkbox small">
                          <input
                            type="checkbox"
                            class="custom-control-input{{ i }}"
                            checked
                            id="customCheck"
                          />
                          <label
                            class="custom-control-label{{ i }}"
                            for="customCheck"
                          ></label>
                        </div>
                      </button>
                      {% else %}
                      <form
                        action="{{
                          url('admin_article_publish', { slug: article.slug })
                        }}"
                        method="post"
                      >
                        <input
                          type="hidden"
                          name="token"
                          value="{{ csrf_token('publish-article') }}"
                        />
                        <button
                          type="submit"
                          style="background: none; border: none; outline: none"
                        >
                          <div class="custom-control custom-checkbox small">
                            <input
                              type="checkbox"
                              class="custom-control-input{{ i }}"
                              id="customCheck"
                            />
                            <label
                              class="custom-control-label{{ i }}"
                              for="customCheck"
                            ></label>
                          </div>
                        </button>
                      </form>
                      {% endif %}
                    </td>
                    <td>
                      <a
                        href="{{
                          path('article_edit', { slug: article.slug })
                        }}"
                      >
                        <i class="far fa-edit"></i> </a
                      >&nbsp;
                      <a
                        href="{{
                          path('article_delete', { slug: article.slug })
                        }}"
                      >
                        <i class="fas fa-trash-alt"></i>
                      </a>
                      <a
                        href="{{
                          path('article_preview', { slug: article.slug })
                        }}"
                      >
                        <i class="fas fa-eye"></i>
                      </a>
                    </td>
                  </tr>
                  {% endfor %}
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
      <!-- /.container-fluid -->
    </div>
    <!-- End of Main Content -->

    <!-- Footer -->
    {{ include("include/backoffice/footer.html.twig") }}
    <!-- End of Footer -->
  </div>
  <!-- End of Content Wrapper -->
</div>
<!-- End of Page Wrapper -->

<!-- Scroll to Top Button-->
<a class="scroll-to-top rounded" href="#page-top">
  <i class="fas fa-angle-up"></i>
</a>

<!-- Logout Modal-->
<div
  class="modal fade"
  id="logoutModal"
  tabindex="-1"
  role="dialog"
  aria-labelledby="exampleModalLabel"
  aria-hidden="true"
>
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Ready to Leave?</h5>
        <button
          class="close"
          type="button"
          data-dismiss="modal"
          aria-label="Close"
        >
          <span aria-hidden="true">×</span>
        </button>
      </div>
      <div class="modal-body">
        Select "Logout" below if you are ready to end your current session.
      </div>
      <div class="modal-footer">
        <button class="btn btn-secondary" type="button" data-dismiss="modal">
          Cancel
        </button>
        <a class="btn btn-primary" href="login.html">Logout</a>
      </div>
    </div>
  </div>
</div>
{% endblock %}
