{% extends 'baseF.html.twig'%} {% block title %} Contact | Logone {% endblock %}
{% block content %}

<section class="contact_area section_gap">
  <div class="container">
    <div class="row justify-content-center">
      {% if errors %}
      <div class="alert alert-danger">
        {{ errors.messageKey|trans(errors.messageData, 'security')  }}
      </div>
      {% endif %}
      <div class="col-lg-12">
        <h1>Je me connecte !</h1>
        <form
          class="row contact_form"
          action="{{ path('security_login') }}"
          method="post"
          id="contactForm"
          novalidate="novalidate"
        >
          <div class="col-md-6">
            <div class="form-group">
              <input
                type="email"
                class="form-control"
                id="email"
                name="_username"
                placeholder="email"
              />
            </div>
            <div class="form-group">
              <input
                type="password"
                class="form-control"
                id="password"
                name="_password"
                placeholder="password"
              />
            </div>
          </div>
          <div class="col-md-12">
            <button type="submit" value="submit" class="primary_btn">
              <span>Me connecter</span>
            </button>
          </div>
        </form>
        <a href="{{ path('app_forgotten_password') }}">Mot de passe oubli√©</a>
      </div>
    </div>
  </div>
</section>
{% endblock %}
