{% extends 'baseF.html.twig'%}
{% block title %} Contact | Logone {% endblock %}
{% block content %}


    <section class="contact_area section_gap">
        <div class="container">
            <div class="row justify-content-center">

                <div class="col-lg-12 ">
                    <h1>Je me connecte !</h1>
                    <form class="row contact_form " action="{{path('security_login')}}" method="post" id="contactForm" novalidate="novalidate">
                        <div class="col-md-6">
                            <div class="form-group">
                                <input type="email" class="form-control" id="email" name="_username" placeholder="email">
                            </div>
                            <div class="form-group">
                                <input type="password" class="form-control" id="password" name="_password" placeholder="password">
                            </div>
                        </div>
                        <div class="col-md-12 ">
                            <button type="submit" value="submit" class="primary_btn">
                                <span>Me connecter</span>
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>
{% endblock %}