{% extends 'baseF.html.twig'%} {% block title %} {{ categories.slug }} | Logone
{% endblock %} {% block meta %}
{{ sonata_seo_metadatas("description") }}
<meta
  name="keywords"
  content="
  {% for service in services %}
  {{ service.slug }},
  {% endfor %}
  "
/>
{% endblock %} {% block content %}

<!--================ Start Features Area =================-->
<section class="features_area section_gap_top" style="margin-bottom: 80px">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-lg-8 text-center">
        <div class="main_title">
          <h2>{{ categories.designation }}</h2>
          <p class="sample-text">
            {{ categories.description | raw }}
          </p>
        </div>
      </div>
    </div>
    <div class="whole-wrap" style="margin-top: -100px">
      <div class="container">
        <div class="section-top-border text-right">
          <div class="row">
            <div class="section-top-border text-right">
              <div class="row">
                <div class="col-md-9">
                  {% set i= 0 %} {% for service in services%} {% set i= i+1 %}
                  <div class="accordion col-lg-12 mt-2" id="accordionExample">
                    <div class="accordion-item">
                      <h2 class="accordion-header" id="headingThree">
                        <button
                          class="accordion-button collapsed"
                          type="button"
                          data-bs-toggle="collapse"
                          data-bs-target="#collapseThree{{ i }}"
                          aria-expanded="false"
                          aria-controls="collapseThree"
                        >
                          {{ service.designation }}
                        </button>
                      </h2>
                      <div
                        id="collapseThree{{ i }}"
                        class="accordion-collapse collapse"
                        aria-labelledby="headingThree"
                        data-bs-parent="#accordionExample"
                      >
                        <div class="accordion-body">
                          {{ service.description | raw }}
                        </div>
                      </div>
                    </div>
                  </div>
                  {% endfor %}
                </div>
                <div class="col-md-3" style="position: relative">
                  <img
                    style="
                      position: absolute;
                      top: 50%;
                      left: 50%;
                      transform: translate(-50%, -50%);
                    "
                    src="{{ asset('/uploads/images/categories_service/' ~ categories.image) }}"
                    alt="image parlant de {{ categories.designation }}"
                  />
                </div>
              </div>
            </div>
            <div class="col-md-12"></div>
          </div>
          <div class="row">
            <div class="text-center">
              <a
                style="margin-top: 20px"
                href="{{
                  absolute_url(path('devis_add', { slug: categories.slug }))
                }}"
                class="genric-btn success circle"
              >
                <span>Je veux un devis</span>
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
<!--================ End Features Area =================-->
