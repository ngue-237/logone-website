<!--================Blog Categorie Area =================-->
<section class="blog_categorie_area section_gap_top">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-lg-8 text-center">
        <div class="main_title">
          <h2>Nos actualités</h2>
          <p>
            Suivez les dernières actualités du marketing digital et du growth
            hacking. Au programme : SEO, SEA, Google Ads, Amazon et Social
            Media. Le blog de l'Agence 90 a pour vocation de partager les
            dernières évolutions relatives au webmarketing.
          </p>
        </div>
      </div>
    </div>
    <div class="row">
      {%for category in catgoriesArticle %}
      <div class="col-lg-4">
        <div class="categories_post">
          <img
            src="{{asset('uploads/images/categories_article/') ~ category.image}}"
            alt="{{ category.image }}"
          />
          <div class="categories_details">
            <div class="categories_text">
              <a
                href="{{ path('blog_by_categorie', { slug: category.slug }) }}"
              >
                <h5>{{ category.title }}</h5>
              </a>
              <div class="border_line"></div>
              <p>{{ category.content | raw }}</p>
              <a
                title="lien vers notre article sur : {{ category.slug }}"
                href="{{ path('blog_by_categorie', { slug: category.slug }) }}"
                class="genric-btn success circle"
              >
                <span>Voir plus</span>
              </a>
            </div>
          </div>
        </div>
      </div>
      {%endfor%}
      <div class="blog-pagination justify-content-center d-flex">
        {{ knp_pagination_render(catgoriesArticle) }}
      </div>
    </div>
  </div>
</section>
