{% extends 'baseF.html.twig'%} {% block title %} Contact | Logone {% endblock %}
{% block content %} {% include('include/frontoffice/header.html.twig')%}
<style>
  form.form-errors {
    color: red;
  }
</style>
<section class="banner_area">
  <div class="banner_inner d-flex align-items-center">
    <div class="container">
      <div class="banner_content text-center">
        <h2>Nous Contacter</h2>
        <div class="page_link">
          <a href="{{ path('home') }}">Accueil</a>
          <a>Contact</a>
        </div>
      </div>
    </div>
  </div>
</section>
<!--================ End Banner Area =================-->

<!--================Contact Area =================-->
<section class="contact_area section_gap">
  <div class="container">
    <div class="row">
      <div class="col-lg-4">
        {% include "include/frontoffice/contact_info.html.twig" %}
      </div>
      <div class="col-lg-8">
        {% form_theme form 'bootstrap_4_layout.html.twig' %}
        {{ form_start(form) }}
        {{
          form_errors(form, {
            attr: {
              class: "form-errors"
            }
          })
        }}
        <div class="row" id="contactForm" novalidate="novalidate">
          <div class="col-md-6">
            <div class="form-group">
              {{
                form_row(form.lastName, {
                  attr: {
                    placeholder: "Nom",
                    class: "form-control"
                  }
                })
              }}
            </div>
            <div class="form-group">
              {{
                form_row(form.firstName, {
                  attr: {
                    placeholder: "Prénom",
                    class: "form-control"
                  }
                })
              }}
            </div>
            <div class="form-group">
              {{
                form_row(form.email, {
                  attr: {
                    placeholder: "Email",
                    class: "form-control",
                  }
                })
              }}
            </div>
          </div>
          <div class="col-md-6">
            <div class="form-group">
              {{
                form_row(form.msg, {
                  attr: {
                    placeholder: "Message",
                    class: "form-control",
                  }
                })
              }}
            </div>
          <div class="col-md-12">
            <div class="form-group">
              {{
                form_row(form.rgpd, {
                  label:"J'accepte les conditions générales d'utilisation !",
                })
              }}
            </div>
          </div>
          <div class="col-md-12">
            <div class="form-group">
              {# {{
                form_row(form.recaptcha, {
                })
              }} #}
            {# <input id="contact_recaptchaP" type="hidden" name="contact_recaptchaP"> #}
            </div>
          </div>
          <div class="col-md-12 text-right">
            <button type="submit" value="submit" class="primary_btn">
              <span>Envoyer</span>
            </button>
          </div>
        </div>
        {{ form_end(form) }}
        <script src="https://www.google.com/recaptcha/api.js?render=6Lc96AYfAAAAAAJsKTsNdyF4yBBWVnt5rWll8Dbe"></script>
      <script>
      grecaptcha.ready(function() {
          grecaptcha.execute('6Lc96AYfAAAAAAJsKTsNdyF4yBBWVnt5rWll8Dbe', {action: 'homepage'}).then(function(token) {
              document.getElementById('contact_captcha').value = token
          });
      });
      </script>
      </div>
    </div>
    <div
      id="mapBox"
      class="mapBox"
      data-lat="40.701083"
      data-lon="-74.1522848"
      data-zoom="13"
      data-info="PO Box CT16122 Collins Street West, Victoria 8007, Australia."
      data-mlat="40.701083"
      data-mlon="-74.1522848"
    ></div>
  </div>
</section>
{{ include("include/frontoffice/footer.html.twig") }}
{% endblock %}
