{% extends 'baseF.html.twig'%} {% block title %} Contact | Logone {% endblock %}
{% block content %} 

<!--================Contact Area =================-->
<section class="contact_area section_gap">
  <div class="container">
    <div class="row">
      <div class="main_title">
      <h2>CONTACTEZ LOGONE</h2>
      <p>
        Envoyez-nous un message pour établir ensemble votre stratégie digitale et obtenir un <span style="color: #4cd3e3; font-weight: bold">AUDIT GRATUIT</span
        >,  de votre site.
      </p>
    </div>
    </div>
    <div class="row">
      <div class="col-lg-4">
        {% include "include/frontoffice/contact_info.html.twig" %}
      </div>      
      <div class="col-lg-8">
        {% form_theme form 'bootstrap_4_layout.html.twig' %}
        {{ form_start(form) }}
        
        {{
          form_errors(form)
        }}
        <div class="row" id="contactForm" novalidate="novalidate">
          <div class="col-md-6">
            <div class="form-group">
              {{
                form_row(form.lastName, {
                  attr: {
                    placeholder: "Nom",
                    class: "form-control"
                  }
                })
              }}
            </div>
            <div class="form-group">
              {{
                form_row(form.firstName, {
                  attr: {
                    placeholder: "Prénom",
                    class: "form-control"
                  }
                })
              }}
            </div>
            <div class="form-group">
              {{
                form_row(form.email, {
                  attr: {
                    placeholder: "Email",
                    class: "form-control",
                  }
                })
              }}
            </div>
            <div class="form-group">
              {{
                form_row(form.urlCustomWebsite, {
                  attr: {
                    placeholder: "url de votre site",
                    class: "form-control",
                  }
                })
              }}
            </div>
          </div>
          <div class="col-md-6">
            <div class="form-group">
              {{
                form_row(form.msg, {
                  attr: {
                    placeholder: "Message",
                    class: "form-control",
                  }
                })
              }}
            </div>
          <div class="col-md-12">
            <div class="form-group">
              {{
                form_row(form.rgpd, {
                  label:"J'accepte les conditions générales d'utilisation !",
                })
              }}
            </div>
          </div>
          <div class="col-md-12">
            <div class="form-group">
              {# {{
                form_row(form.recaptcha, {
                })
              }} #}
            {# <input id="contact_recaptchaP" type="hidden" name="contact_recaptchaP"> #}
            </div>
          </div>
          <div class="col-md-12 text-right">
            <button type="submit" value="submit" class="genric-btn success  circle">
              <span>Envoyer</span>
            </button>
          </div>
        </div>
        {{ form_end(form) }}
        
      </div>
    </div>
  </div>
  <div class="row" style="margin-bottom: 200px;"></div>
</section>
{{ include("include/frontoffice/footer.html.twig") }}
{% block javascripts %}
  <script src="https://www.google.com/recaptcha/api.js?render=6Lc96AYfAAAAAAJsKTsNdyF4yBBWVnt5rWll8Dbe"></script>
        <script>
        grecaptcha.ready(function() {
            grecaptcha.execute('6Lc96AYfAAAAAAJsKTsNdyF4yBBWVnt5rWll8Dbe', {action: 'homepage'}).then(function(token) {
                document.getElementById('contact_captcha').value = token
            });
        });
  </script>
{% endblock %}
{% endblock %}
