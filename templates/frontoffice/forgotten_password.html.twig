{% extends 'baseF.html.twig'%} {% block title %} Contact | Logone {% endblock %}
{% block content %}

<section class="contact_area section_gap">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-lg-12">
        <h1>Mot de passe oubli√© !</h1>
        {% form_theme form 'bootstrap_4_layout.html.twig' %}
        {{ form_start(form) }}
        <div class="row" id="contactForm" novalidate="novalidate">
          <div class="col-lg-6">
            <div class="form-group">
              {{
                form_row(form.email, {
                  label: false,
                  attr: {
                    placeholder: "entrez votre email",
                    class: "form-control",
                  }
                })
              }}
            </div>
          </div>

          <div class="col-lg-12">
            <button type="submit" value="submit" class="primary_btn">
              <span>Valider</span>
            </button>
          </div>
        </div>
        {{ form_end(form) }}
      </div>
    </div>
  </div>
</section>
{% endblock %}
